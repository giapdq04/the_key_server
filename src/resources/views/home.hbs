<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-course-item" style="width: 18rem;">
                <a href="/{{this.slug}}">
                    <img src="{{this.thumbnail}}" class="card-img-top" style="height: 170px; object-fit: contain;"
                        alt="{{this.title}}">
                </a>

                <div class="card-body">
                    <a href="/{{this.slug}}">
                        <h5 class="card-title">{{this.title}}</h5>
                    </a>
                    <a href="/{{this.slug}}" class="btn btn-primary">Xem khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>
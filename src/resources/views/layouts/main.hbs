<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>TheKey Admin</title>
    <link rel="shortcut icon" href="/img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-header">
                    <a href="/" class="d-flex align-items-center p-3 text-decoration-none">
                        <img src="/img/logo.png" alt="Logo" class="sidebar-logo">
                        <h3 class="ms-3 mb-0 text-dark">Admin</h3>
                    </a>
                </div>
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link {{isActive '/'}}" href="/">
                                <i class="bi bi-house-door"></i>
                                Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{isActive '/slides'}}" href="/slides">
                                <i class="bi bi-images"></i>
                                Quản lý slide
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{isActive '/courses/create'}}" href="/courses/create">
                                <i class="bi bi-plus-square"></i>
                                Tạo khóa học
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{isActive '/courses/stored-courses'}}" href="/courses/stored-courses">
                                <i class="bi bi-card-list"></i>
                                Danh sách khóa học
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{isActive '/admins'}}" href="/admins">
                                <i class="bi bi-person-fill-gear"></i>
                                Danh sách quản trị viên
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            {{> header}}

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="container">
                    {{{body}}}
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</body>

</html>
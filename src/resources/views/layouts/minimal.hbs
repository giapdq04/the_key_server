<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>TheKey Admin</title>
    <link rel="shortcut icon" href="/img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-header">
                    <a href="/" class="d-flex align-items-center p-3 text-decoration-none">
                        <img src="/img/logo.png" alt="Logo" class="sidebar-logo">
                        <h3 class="ms-3 mb-0 text-dark">Admin</h3>
                    </a>
                    <a class="btn btn-light" href="/courses/stored-courses">
                        <i class="bi bi-arrow-left"></i>
                        Quay lại
                    </a>
                </div>
                <div class="position-sticky pt-3">

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link {{isActive (concat '/' course.slug)}}" href="/{{course.slug}}">
                                <i class="bi bi-dpad"></i>
                                Bảng điều khiển
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link {{isActive (concat '/' course.slug '/lessons')}}"
                                href="/{{course.slug}}/lessons" href="/courses/{{course._id}}/lessons">
                                <i class="bi bi-play-circle"></i>
                                Danh sách bài học
                            </a>
                        </li>

                        {{!-- <li class="nav-item">
                            <a class="nav-link {{isActive (concat '/' course.slug '/sections')}}"
                                href="/{{course.slug}}/sections" href="/courses/{{course._id}}/sections">
                                <i class="bi bi-collection"></i>
                                Danh sách chương
                            </a>
                        </li> --}}
                    </ul>
                </div>
            </div>
            {{> header}}

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="container">
                    {{{body}}}
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</body>

</html>
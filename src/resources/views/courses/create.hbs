<div class="mt-4">
    <h3>Tạo khóa học</h3>

    <form autocomplete="off" method="post" action="/courses/store" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" id="title" name="title" required>
        </div>

        <div class="mb-3">
            <label for="thumbnail" class="form-label">Ảnh thumbnail khóa học</label>
            <input class="form-control" type="file" name="thumbnail" id="thumbnail" accept="image/*" required>
            
            <!-- Thêm div hiển thị ảnh preview -->
            <div class="mt-2">
                <img id="imagePreview" src="" alt="Ảnh xem trước" style="max-width: 300px; max-height: 200px; display: none;" class="img-thumbnail">
            </div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea class="form-control" id="description" name="description" required></textarea>
        </div>

        {{#if error}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
        {{/if}}

        <button type="submit" class="btn btn-primary">Tạo khóa học</button>
    </form>
</div>

<!-- Script xử lý hiển thị ảnh preview -->
<script>
    document.getElementById('thumbnail').addEventListener('change', function(event) {
        const imagePreview = document.getElementById('imagePreview');
        const file = event.target.files[0];
        
        if (file) {
            // Hiển thị ảnh preview
            const reader = new FileReader();
            reader.onload = function(e) {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
            }
            reader.readAsDataURL(file);
        } else {
            // Ẩn ảnh preview nếu không có file được chọn
            imagePreview.src = '';
            imagePreview.style.display = 'none';
        }
    });
</script>
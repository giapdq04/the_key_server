<div class="mt-4">
    <h3>Đăng khóa học</h3>

    <form autocomplete="off" method="post" action="/courses/store">
        <div class="mb-3">
            <label for="title" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" id="title" name="title">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>

        <div class="mb-3">
            <label for="ytbVideoLink" class="form-label">Link video</label>
            <input type="text" class="form-control" id="ytbVideoLink" name="ytbVideoLink">

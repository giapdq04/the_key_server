<div class="mt-4">
    <h3>Tạo quản trị viên</h3>



    <form autocomplete="off" method="post" action="/admins">
        <div class="mb-3">
            <label for="admin_name" class="form-label">Tên đăng nhập</label>
            <input type="text" class="form-control" id="admin_name" name="admin_name" required>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>

        <div class="mb-3">
            <label for="power" class="form-label">Quyền (<strong>càng thấp càng mạnh và chỉ nhập được số
                    0-10</strong>)</label>
            <input type="number" class="form-control" id="power" name="power" required>
        </div>

        {{#if error}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
        {{/if}}

        <button type="submit" class="btn btn-primary">Tạo khóa học</button>
    </form>
</div>